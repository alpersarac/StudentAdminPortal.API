@model Rentiva.Models.Product

<form method="post" asp-action="Edit">
    <input asp-for="CategoryId" hidden />
    <div class="border p-3 mt-4 border-secondary">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Cover Type</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All">

        </div>*@
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-asp-controller="Product" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to the list
        </a>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}