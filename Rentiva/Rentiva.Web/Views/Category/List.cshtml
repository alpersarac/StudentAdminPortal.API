@model Rentiva.Models.Category

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Product List</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All">

        </div>*@
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input disabled asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Products</label>
            <ul>
                @if (ViewBag.ProductList.Count==0)
                {
                    <h6 class="text-danger">There is not product</h6>
                }
                else
                {
                    @foreach (var Product in ViewBag.ProductList)
                    {
                        <li>@Product.Name</li>
                    }
                }

            </ul>
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <a asp-asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to the list
        </a>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}